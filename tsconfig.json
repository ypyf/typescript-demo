{
    "allowJs": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "noLib": false,
        "jsx": "react",
        "typeRoots": [
            "./typings"
        ]
    },
    "include": [
        "src/**/*",
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "files": []
}